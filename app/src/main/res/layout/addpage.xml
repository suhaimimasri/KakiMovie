<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".movieAdapter"
    android:background="@drawable/backgroundhomepage"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_ayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:fontFamily="@font/montserratlight"
            android:text="TITLE :"
            android:textSize="25dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="12dp"/>

        <EditText
            android:id="@+id/titleedit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:textSize="25dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/title_ayat" />

        <TextView
            android:id="@+id/rating_ayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RATING :"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/montserratlight"
            android:layout_below="@+id/titleedit"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/ratingedit"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_below="@id/rating_ayat"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/status_ayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS :"
            android:textSize="25dp"
            android:layout_below="@+id/ratingedit"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:fontFamily="@font/montserratlight"/>

        <Spinner
            android:id="@+id/statusedit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="25dp"
            android:layout_below="@id/status_ayat"
            android:layout_centerHorizontal="true"
            android:background="#ffffff">
        </Spinner>

        <Button
            android:id="@+id/additem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/statusedit"
            android:layout_marginTop="90dp"
            android:onClick="Add"/>

    </RelativeLayout>

</LinearLayout>